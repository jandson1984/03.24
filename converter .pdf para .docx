from pdf2docx import Converter

# Define uma função para converter um PDF em um documento Word
def convert_pdf_to_word(pdf_path, word_path):
    # Cria um conversor de PDF para DOCX
    cv = Converter(pdf_path)
    # Converte o PDF e salva no caminho especificado para o DOCX
    cv.convert(word_path, start=0, end=None)
    # Fecha o conversor e libera os recursos
    cv.close()

# Solicita ao usuário o nome do arquivo PDF e do arquivo DOCX de saída
pdf_input = input("Digite o nome do arquivo PDF (com .pdf): ")
docx_output = input("Digite o nome do arquivo DOCX de saída (com .docx): ")

# Chama a função para converter o arquivo PDF especificado em um documento Word e salvar com o nome especificado
convert_pdf_to_word(pdf_input, docx_output)

# Imprime uma mensagem de sucesso
print(f"{pdf_input} foi convertido com sucesso para Word e salvo como {docx_output}")
